<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/grab_state"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="325dp"
        android:src="@mipmap/book_success" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_marginRight="7dp"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/give_button"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="left"

                android:background="@mipmap/cancel"
                android:src="@drawable/sl_rectangle"
                 />

            <TextView
                android:id="@+id/givetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/give"
                android:textColor="@color/bg_white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_marginLeft="7dp"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/start_game"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:src="@drawable/sl_rectangle"
                android:background="@mipmap/start" />

            <TextView
                android:id="@+id/start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/start_game"
                android:textColor="@color/bg_white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>